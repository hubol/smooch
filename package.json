{
  "name": "smooch",
  "version": "0.1.0",
  "description": "Generate texture atlases, audio sprites, and source code from directories",
  "scripts": {
    "build": "npm run build:json-schema && npm run build:bundle && npm run build:npm-pack",
    "build:json-schema": "ts-node ./tools/generate-config-schema.ts",
    "build:bundle": "webpack",
    "build:npm-pack": "ts-node ./tools/pack.ts",
    "dev:build-and-test": "npm run build && npm run test",
    "test": "ts-node --transpileOnly test/test.ts"
  },
  "bin": {
    "smooch": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "author": "Hubol",
  "license": "ISC",
  "dependencies": {
    "@parcel/watcher": "^2.1.0",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "@types/js-beautify": "^1.13.3",
    "@types/sharp": "^0.31.1",
    "@vercel/ncc": "^0.36.1",
    "chalk": "^4.1.2",
    "change-case": "^4.1.2",
    "glob": "^10.3.3",
    "js-beautify": "^1.14.9",
    "maxrects-packer": "^2.7.3",
    "minimatch": "^9.0.3",
    "superstruct": "^0.15.5",
    "tree-kill": "^1.2.2",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "typescript-json-schema": "^0.56.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-shebang-plugin": "^1.1.8"
  }
}
